        Global Overrides
*******************************/


.footerWrapper {
  background-color: @primaryColor  !important;
  color: @white;

  .unlist {
    margin: 0;
    list-style-type: none;
    text-decoration: underline;
    font-weight: bold;
  }

  a {
    color: @white;
    text-decoration: underline;
    font-weight: bold;
  }
}

.browse-area {

  //  HEADER BAR
  .header-bar {
    background-color: @darkWhite;
    height: 40px;
    margin-bottom: @bigMargin;
    display: flex;
    align-items: center;

    .header-wrapper {
      display: flex;
      align-items: center;
    }

    .bar-item {
      font-size: @titleFontSize;
      margin: 0 40px 0 0;
      padding-bottom: 5px;
      padding-top: 5px;
      cursor: pointer;
    }

    .selected {
      color: @lightblue;
      font-weight: bold;
      border-bottom: solid;
    }
  }

  //  SEARCH BAR
  .search-bar {
    .browse-input {
      flex: 3;
      margin-left: @extraMargin;
      height: 50px;

      @media only screen and (max-width: @500Breakpoint) {
        width: 80%;
        margin-left: 0;
        margin-top: @extraMargin;
      }

      input {
        background: @darkWhite  !important;
        border-radius: @themeBorderRadius  !important;
        border: none !important;
        padding: 13.5px;
        font-size: @contentFontSize;
      }

      i {
        font-size: 30px;
        color: @darkBlue;
        left: -15px !important;
      }
    }

    .view-button {
      background: @white;
      border: 1px solid @bodyGrey;
      border-radius: @themeBorderRadius;
      margin-right: @extraMargin;
      padding: @buttonPadding;
      font-size: @contentFontSize;
      color: @lightGrey;
      cursor: pointer;
      outline: none;
      flex: 1;
    }

    .browse-text {
      margin: 0;
      align-self: center;
      color: @lightGrey;
      flex: 0;
    }
  }

  //  TOOLBAR
  .browse-button {
    border-radius: @themeBorderRadius;
    font-size: @contentFontSize;
    font-weight: bold;
    cursor: pointer;
    border: none;
    outline: none;
    max-width: 250px;
  }

  .advanced-red {
    background-color: @darkOrange;
    color: @white;
    height: 50px;
    padding: @buttonPadding;

    @media only screen and (max-width: @500Breakpoint) {
      width: 90%;
    }
  }

  .red-selected {
    background-color: @darkOrange;
    color: @white;
    padding: 10px 15px;
  }

  .red {
    background-color: @white;
    color: @darkOrange;
    font-weight: normal;
    padding: 10px 15px;
  }

  .blue {
    background-color: @darkBlue;
    color: @white;
    padding: @buttonPadding;

    @media only screen and (max-width: @500Breakpoint) {
      width: 90%;
      margin-top: @normalMargin;
      height: 50px;
    }
  }

  .spaced-row {
    width: 50%;
    display: flex;
    justify-content: space-between;

    @media only screen and (max-width: 660px) {
      width: 85%;
      flex-wrap: wrap;
      margin-top: @extraMargin;
      justify-content: center;
    }
  }

  .centered-selector-row {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 80px;

    @media only screen and (max-width: @500Breakpoint) {
      justify-content: space-between;
      margin-bottom: @extraMargin;
      margin-left: 0;
      margin-right: 0;
    }
  }

  //  BROWSE CONTENT AREA
  .browse-content-area {
    width: 100%;
    position: relative;

    //  BROWSE MAP
    .map-modal-button {
      position: absolute;
      top: 30px;
      right: 30px;
      padding: 10px;
      background: @white;
      border: none;
      color: @blue;
    }

    .map-modal {
      padding: 15px 45px;
      background-color: @white;
      position: absolute;
      top: 20%;
      left: 50%;
      border: 2px solid @darkBlue;

      @media only screen and (max-width: @computerBreakpoint) {
        left: 5%;
      }

      .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 400px;

        @media only screen and (max-width: @500Breakpoint) {
          width: 100%;
        }
      }

      .modal-title {
        font-size: @headlineFontSize;
        margin-top: @mediumMargin;
        margin-bottom: @mediumMargin;
        color: @lightblue;
        font-weight: @extraBold;
      }

      .modal-label {
        font-size: @titleFontSize;
        font-weight: @extraBold;
        margin-top: @mediumMargin;
        margin-bottom: @smallMargin;
        color: @lightblue;
      }
    }

    .search-map-menu {
      position: absolute;
      margin-bottom: 33px;
      background: @white;
      top: 0;
      left: 10%;
      height: 100%;
      width: 300px;
      padding: 10px 40px;

      .menu-title {
        font-size: @titleFontSize;
        margin-top: @mediumMargin;
        margin-bottom: @mediumMargin;
        color: @lightblue;
        font-weight: @extraBold;
      }

      .menu-label {
        font-size: @contentFontSize;
        font-weight: @extraBold;
        margin-top: @mediumMargin;
        margin-bottom: @smallMargin;
        color: @lightblue;
      }

      .quick-fact-card {
        margin-top: @normalMargin;
        margin-bottom: @normalMargin;
      }

      .menu-radio {
        font-size: @contentFontSize;
        font-weight: @lightWeight;
        min-height: 35px !important;

        label::after {
          background-color: @darkOrange  !important;
        }
      }


      .card-content {
        font-size: @contentFontSize;
        font-weight: @lightWeight;
        margin-top: @smallMargin;
        margin-bottom: @smallMargin;
      }
    }
  }
}

//  BROWSE TABLE
.browse-table {
  .ui.grid {
    margin-top: 0 !important;
  }

  .ui.table {
    border: none;

    tr {
      border: none;

      &.hidden-row {
        &.hide {
          td {
            .table-flex-container {
              padding: 0;
              max-height: 0;
              opacity: 0;
            }
          }
        }

        &.show {
          td {
            .table-flex-container {
              padding: 20px 30px 40px 30px;
              max-height: fit-content;
              opacity: 1;
            }
          }
        }

        td {
          padding: 0;

          .table-flex-container {
            display: flex;
            justify-content: space-between;
            overflow: hidden;
            transition: opacity 0.4s cubic-bezier(0, 0, 1, 1);
            padding: 0 0.4rem;

            >div {
              position: relative;
              flex: 1;
              margin: 0 0.4rem;
            }

            span.header {
              font-weight: bold;
            }

            a.view-site-link {
              width: 100%;
              text-align: center;
              background: #32536B;
              color: white;
              font-weight: bold;
              text-transform: uppercase;
              border-radius: 5rem;
              padding: 1.5rem 3rem;
            }
          }
        }
      }
    }

    td {
      border: none;
      padding: 0.8em 0.8em;
    }

    thead {
      tr {
        border-bottom: 1px solid #CBCBCB;

        th {
          border: none;
          background: #fff;
          color: #000;
          font-weight: bold;
          text-transform: none;
        }
      }
    }

    tfoot {
      th {
        border: none;
      }
    }
  }

  button {
    cursor: pointer;
    background: transparent;
    border: none;
    padding: 0;

    &:focus {
      outline: none;
    }

    svg.icon {
      fill: #D63D27 !important;

      &:focus {
        outline: none;
      }
    }
  }

  .ui.pagination.menu .item {
    color: #6B6B6B;
    min-width: 0;
    padding: 1em 0.4em;

    &:focus {
      outline: none !important;
    }
  }

  .ui.pagination.menu .active.item {
    color: #000;
    border-bottom: none;
  }
}

