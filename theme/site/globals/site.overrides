/*******************************
        Global Overrides
*******************************/
.ui.vertical.padded.segment.footerWrapper>.ui.container {
  width: 80% !important;

  @media only screen and (max-width: @largestTabletScreen) {
    margin: 0 2rem !important;
    width: auto !important;
  }
}

.footerWrapper {
  background-color: @primaryColor  !important;

  .ui.container {
    padding-top: 2rem;

    .six.wide.column {
      flex: 2 0 auto;
    }

    @media only screen and (min-width: 425px) and (max-width: @largestTabletScreen) {
      .row {

        /*.three.wide.column, .six.wide.column {
          width: 100% !important;
        }*/
        .three.wide.column:last-child {
          width: 100% !important;
        }
      }
    }

    @media only screen and (max-width: 600px) {
      .row {
        flex-direction: column;

        .six.wide.column,
        .three.wide.column {
          width: 100% !important;
        }

        .six.wide.column {
          margin-top: .5rem;
          flex-direction: row;
        }
      }
    }
  }

  .unlist {
    padding-left: 0;
    margin: 0;
    list-style-type: none;
    text-decoration: underline;
    font-weight: bold;
  }

  a {
    color: @white;
    text-decoration: underline;
    font-weight: bold;
  }

  p {
    color: @white;
  }
}

#page-document.ui.container {
  @media only screen and (min-width: 982px) {
    width: 80% !important;
    margin-top: 4rem !important;
  }

  @media only screen and (max-width: @largestTabletScreen) {
    margin: 2rem !important;
  }
}

@media only screen and (max-width: 1071px) and (min-width: 992px) {
  .large.screen.widescreen.only.menu {
    display: none !important;
  }
}

.withSidebar {
  display: flex;

  .hamburger-wrapper {
    position: absolute;
  }

  #page-document.hasSidebar {
    width: 100%;
    background-color: @lightPrimaryColor;
    padding: 3rem;
    text-align: left;

    @media only screen and (min-width: 1072px) {
      width: 70%;
    }
  }

  .page-document-sidebar {
    width: 30%;
    background-color: @lightSecondaryColor;
    display: flex;
    min-height: 100vh;

    .tabs {
      flex-direction: column;
      margin-left: auto;
      display: inline-flex;
      position: relative;
      margin-right: 2rem;
      margin-top: 4rem;
      width: 58%;

      a {
        color: @bodyColor;
        font-size: 1rem;

        &.tabs__item {
          padding-bottom: 2rem;

          &.tabs__item_active {
            font-weight: @extraBold;
            color: @linkColor;
          }

          &.depth__2 {
            padding-left: 16px;

            &.tabs__item_active {
              font-weight: @extraBold;
              color: @bodyColor;
            }
          }
        }
      }
    }
  }

  .hasSidebar {
    padding-right: 10rem !important;

    h1.documentFirstHeading {
      text-align: center;
    }
  }

  &.mobileSidebarOpened {
    #page-document.hasSidebar {
      width: 30%;
      padding-left: 20px !important;
      padding-right: 0 !important;
    }

    .page-document-sidebar {
      width: 70%;
    }
  }
}

.tabs.section-tabs {
  width: 80%;
  margin: 0 auto;
  overflow: auto;
  white-space: nowrap;

  a {
    color: @bodyColor;
    font-size: 18px;
    margin-right: 4rem;
    line-height: 3;
    // padding-bottom: 1rem;
    display: inline-block;

    &.tabs__item_active {
      font-weight: @extraBold;
      color: @primaryColor;
      border-bottom: 2px solid @primaryColor;
    }
  }
}

.ui.basic.segment.content-area {
  padding: 0;
  margin: 0;
}

h1.documentFirstHeading {
  text-align: center;
}

h1.documentFirstHeading {
  font-size: 36px;
  color: @primaryColor;
  font-weight: @extraBold;
  border-bottom: none !important;

  &:before {
    display: none !important;
  }
}

h2,
h3,
h4 {
  line-height: 1.5;
  font-weight: 600;
}

h2 {
  font-size: 2.2rem;
}

h3 {
  font-size: 1.8rem;
}

h4 {
  font-size: 1.5rem;
}

p {
  color: @bodyColor;
  font-weight: @lightWeight;

  &.documentDescription {
    color: @fullBlack;
  }
}

.breadcrumbs {
  display: none;
}

.detailed-link-block {
  display: flex;
  flex-wrap: wrap;
  max-width: 800px;
  margin: 0 auto;
  flex-direction: column;
}

.detailed-link-block-item-title {
  font-size: 28px;
  margin-bottom: 1.5rem;
  color: @fullBlack;
  font-weight: bold;
  position: relative;
}

.center-heading h1.documentFirstHeading {
  text-align: center;
}

.detailed-link-block {
  button {
    max-width: 200px;
    border-radius: @themeBorderRadius  !important;
    line-height: 2 !important;
    text-align: center !important;
    border-width: 1px;
    font-weight: @lightWeight;
    min-height: 46px;
    font-size: 1.2rem;
    text-transform: uppercase;
    font-weight: 100;
    margin-top: 1rem;
  }

  p {
    color: @black;
    font-size: @contentFontSize;
    position: relative;
  }
}

.article-list-row {
  display: flex;
  margin-bottom: @extraMargin;

  @media only screen and (max-width: @500Breakpoint) {
    flex-wrap: wrap;
    margin-bottom: @bigMargin;
  }

  .article-img {
    width: 200px;
    border-radius: @themeBorderRadius;
    margin-right: @extraMargin;

    @media only screen and (max-width: @500Breakpoint) {
      width: 90%;
    }
  }

  .article-title {
    color: @linkColor;
    font-weight: bold;
    font-size: @titleFontSize;
    margin-top: @normalMargin;
    margin-bottom: 0;
  }

  .article-date {
    font-size: 12px;
    color: @bodyGrey;
    margin-bottom: @smallMargin;
    margin-top: @smallMargin;
  }

  .read-article {
    border: 1px solid @darkBlue;
    padding: 5px 30px;
    border-radius: @themeBorderRadius;
  }

  .article-description {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    /* number of lines to show */
    -webkit-box-orient: vertical;
    margin-bottom: @extraMargin;
  }
}

.child-container {
  display: flex;
  justify-content: center;
  border: 1px solid @darkBlue;
  border-radius: @themeBorderRadius;
  margin: @smallMargin;

  .child-link {
    padding: 10px 25px;
    color: @darkBlue;
    font-size: @titleFontSize;
    font-weight: @lightWeight  !important;
    text-decoration: none;
  }
}

.search-text {
  margin: @normalMargin  !important;
  font-size: @titleFontSize  !important;
}




